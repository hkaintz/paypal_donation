<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:core="sap.ui.core">

	<l:HorizontalLayout id="_IDGenHorizontalLayout1"
		class="sapUiContentPadding">

		<smartForm:SmartForm id="smartForm"
			editable="true"
			app:defaultCheckBoxDisplayBehaviour="OnOff"
			app:defaultDropDownDisplayBehaviour="idAndDescription"
			editTogglable="false"
			validationMode="Async"
			title="Make a Donation">
			<smartForm:Group id="_IDGenGroup1">
				<smartForm:GroupElement id="_IDGenGroupElement1">
					<smartField:SmartField id="_IDGenSmartField1"
						value="{FirstName}" />
				</smartForm:GroupElement>
				<smartForm:GroupElement id="_IDGenGroupElement2">
					<smartField:SmartField id="_IDGenSmartField2"
						value="{LastName}" />
				</smartForm:GroupElement>

				<smartForm:GroupElement id="_IDGenGroupElement3">
					<smartField:SmartField id="_IDGenSmartField3"
						value="{Value}" />
				</smartForm:GroupElement>

			</smartForm:Group>
		</smartForm:SmartForm>

		<FlexBox id="paypal-button-container"
			alignContent="Center"
			alignItems="Center"
			justifyContent="Center" />

	</l:HorizontalLayout>

</core:FragmentDefinition>